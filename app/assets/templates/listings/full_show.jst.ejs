<div class="jumbotron jumbo">
  <h1>Surprise! You're going to <%= listing.escape("city") %>! </h1>
</div>

<div class="main-img-div">
  <% if (listing.get("images") && listing.get("images").length > 0 ) { %>
    <img class = "main-img" src="<%=listing.get("images")[0].image_url%>" class="img-responsive" width= "<%= $(window).width() %>"/>
  <% } %>
</div>

<div class="col-md-6">
  <div class="text-item">
    <h1 class="sub-title"><%= listing.escape("title") %></h1>
  </div>

  <div class= "text-item">
    <h4 class= "sub-title"> Dates Available: <%=listing.escape("start_date") %> to <%=listing.escape("end_date") %> </h3>
  </div>

  <div class = "text-item">
    <h4 class= "sub-sub-title">Price Per Night: <%=listing.escape("price") %>$ </h4>
  </div>

  <div class = "text-item">
    <h4 class= "sub-sub-title">Address: <%=listing.escape("street_address") %> <br>
      <%=listing.escape("city") %>,<%=listing.escape("country") %>
      <%=listing.escape("zipcode") %></h4>
  </div>

  <div class = "text-item">
    <h4 class= "sub-sub-title"> Description: <%=listing.escape("details") %> </h4>
  </div>





  <h3>New Comment</h3>
  <div class= "comment-form"></div>

  <h2>Comments</h2>
  <ul class="comments"></ul>
</div>

<div class="col-md-6 ">
  <% if (listing.get("images")) { %>
    <% for (var i = 1; i < listing.get("images").length; i++) { %>
      <img class = "sub-img" src="<%=listing.get("images")[i].image_url%>" class="img-responsive">
    <% } %>
  <% } %>

</div>

<div id="map-canvas-show" style=" height:500px;" width= "<%= $(window).width() %>"></div>
