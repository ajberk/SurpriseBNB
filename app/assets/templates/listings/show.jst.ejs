<div class="jumbotron jumbo">
  <h1>Surprise! You're going to <%= listing.escape("city") %>! </h1>
</div>

<div class="main-img-div">
  <% if (listing.get("images")) { %>
    <img class = "main-img" src="<%=listing.get("images")[0].image_url%>" class="img-responsive" width= "<%= $(window).width() %>"/>
  <% } %>
</div>

<h1><%= listing.escape("title") %></h1>

<ul>
  <li>
    Available from <%=listing.escape("start_date") %> to <%=listing.escape("end_date") %>
  </li>
  <li>
    Price Per Night: <%=listing.escape("price") %>$
  </li>
  <li>
    Address: <%=listing.escape("street_address") %> <br>
    <%=listing.escape("city") %>,<%=listing.escape("country") %>
    <%=listing.escape("zipcode") %>
  </li>
  <br><br><br>
    <li>
      Description: <%=listing.escape("details") %>
    </li>
</ul>




